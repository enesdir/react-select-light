{
	"name": "react-select-light",
	"version": "0.0.5",
	"description": "A highly composable & reusable select component in react",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/enesdir/react-select-light.git"
	},
	"homepage": "https://enesdir.github.io/react-select-light/",
	"bugs": {
		"url": "https://github.com/enesdir/react-select-light/issues"
	},
	"author": "enesdir",
	"license": "MIT",
	"engines": {
		"node": ">=16.0.0"
	},
	"main": "./dist/index.js",
	"module": "./dist/esm/index.js",
	"exports": {
		".": {
			"require": "./dist/index.js",
			"import": "./dist/esm/index.js",
			"types": "./dist/index.d.mts"
		}
	},
	"types": "./dist/index.d.ts",
	"files": [
		"LICENSE.md",
		"dist/**",
		"package.json",
		"README.md"
	],
	"keywords": [
		"react",
		"component",
		"tiny",
		"lightweight",
		"react-select",
		"react-multiselect",
		"react-component"
	],
	"scripts": {
		"build": "tsup",
		"build-storybook": "storybook build",
		"chromatic": "chromatic --exit-zero-on-changes",
		"dev": "tsup --watch",
		"lint": "eslint src --fix --cache",
		"lint-staged": "lint-staged",
		"prepare": "husky install",
		"push-release": "git push --follow-tags origin main",
		"release": "dotenv -e HUSKY=0 commit-and-tag-version",
		"storybook": "storybook dev -p 6006 --no-open",
		"test": "dotenv -e NODE_ENV=test vitest",
		"test:ci": "vitest run --coverage",
		"type-check": "tsc",
		"vite": "vite"
	},
	"peerDependencies": {
		"react": "^17 || ^18",
		"react-dom": "^17 || ^18"
	},
	"dependencies": {
		"@tanstack/react-virtual": "^3.0.4"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.6.0",
		"@commitlint/config-conventional": "^18.6.0",
		"@commitlint/cz-commitlint": "^18.6.0",
		"@commitlint/prompt-cli": "^18.6.0",
		"@ianvs/prettier-plugin-sort-imports": "^4.1.1",
		"@storybook/addon-essentials": "^7.6.12",
		"@storybook/addon-interactions": "^7.6.12",
		"@storybook/addon-links": "^7.6.12",
		"@storybook/blocks": "^7.6.12",
		"@storybook/builder-vite": "^7.6.12",
		"@storybook/react": "^7.6.12",
		"@storybook/react-vite": "^7.6.12",
		"@storybook/testing-library": "^0.2.2",
		"@testing-library/jest-dom": "^6.4.1",
		"@testing-library/react": "^14.2.1",
		"@types/react": "^18.2.51",
		"@types/react-dom": "^18.2.18",
		"@typescript-eslint/eslint-plugin": "^6.20.0",
		"@typescript-eslint/parser": "^6.20.0",
		"@vitest/coverage-v8": "^1.2.2",
		"chromatic": "^10.6.1",
		"commit-and-tag-version": "^12.2.0",
		"commitizen": "^4.3.0",
		"commitlint": "^18.6.0",
		"dotenv-cli": "^7.3.0",
		"eslint": "8.56.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-import": "2.29.1",
		"eslint-plugin-jsx-a11y": "6.8.0",
		"eslint-plugin-mdx": "^3.1.5",
		"eslint-plugin-prefer-arrow": "1.2.3",
		"eslint-plugin-prettier": "5.1.3",
		"eslint-plugin-react": "7.33.2",
		"eslint-plugin-react-hooks": "4.6.0",
		"eslint-plugin-sort-class-members": "^1.19.0",
		"eslint-plugin-storybook": "0.6.15",
		"eslint-plugin-typescript-sort-keys": "3.1.0",
		"eslint-plugin-unused-imports": "3.0.0",
		"husky": "^9.0.10",
		"jsdom": "^24.0.0",
		"lint-staged": "^15.2.1",
		"postcss": "^8.4.33",
		"prettier": "^3.2.4",
		"prettier-plugin-jsdoc": "^1.3.0",
		"prettier-plugin-pkg": "^0.18.1",
		"prettier-plugin-sh": "^0.14.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-test-renderer": "18.2.0",
		"storybook": "^7.6.12",
		"stylelint": "^16.2.1",
		"stylelint-config-standard": "^36.0.0",
		"tsup": "^8.0.1",
		"typescript": "^5.3.3",
		"vitest": "^1.2.2"
	},
	"publishConfig": {
		"access": "public"
	},
	"browserslist": [
		"defaults",
		"not IE 11",
		"maintained node versions"
	]
}
